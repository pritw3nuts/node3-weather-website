                <form action="">
                    <div class="input">
                        <input type="text" placeholder="Search your location">
                    </div>
                    <div class="input-btn">
                        <button>Search</button>
                    </div>
                </form>

                <p id="messageOne"></p>
                <p id="messageTwo"></p>

            </div>

            {{>footer}}
        </div>
    </div>
</body>
<script src="./js/script.js"></script>
